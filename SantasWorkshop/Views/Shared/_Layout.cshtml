<!DOCTYPE html>
<html lang="en">
<head>
    @Scripts.Render("~/bundles/jquery")
    <meta charset="utf-8">
    <title>Santa's Workshop!</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <style>
        body {
            padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
    </style>
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="../assets/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="../assets/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="../assets/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="../assets/ico/apple-touch-icon-57-precomposed.png">
    <link rel="shortcut icon" href="../assets/ico/favicon.png">
    @Styles.Render("~/Content/bootstrapcss")
    <link rel="stylesheet" type="text/css" href="~/Content/jquery.dataTables.css">

    <link rel="stylesheet" type="text/css" href="~/Content/myCSS.css">
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top ">
        <div class="navbar-inner">
            <div class="container">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="brand" href="/Home">Santa's Workshop!</a>
                <div id="cssmenu" class="nav-collapse collapse">
                    <ul id="homeTab" class="nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" name="manage">Manage<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Workshops", "Index", "Workshop")</li> 
                                <li>@Html.ActionLink("Departments", "Index", "Department")</li> 
                                <li>@Html.ActionLink("Elves", "Index", "Elf")</li> 
                                <li>@Html.ActionLink("Presents", "Index", "Present")</li> 
                                <li>@Html.ActionLink("Toys", "Index", "Toy")</li>  
                                <li>@Html.ActionLink("Houses", "Index", "House")</li> 
                                <li>@Html.ActionLink("Reindeer", "Index", "Reindeer")</li> 
                                <li>@Html.ActionLink("Kids", "Index", "Kid")</li> 
                                <li>@Html.ActionLink("Visitors", "Index", "Visitor")</li> 
                                <li>@Html.ActionLink("Wrapping Papers", "Index", "WrappingPaper")</li>         
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" name="tools">Tools<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Santa's List", "SantasList", "Kid")</li>  
                                <li>@Html.ActionLink("Popular Present Types", "PresentReport", "Present")</li> 
                                <li>@Html.ActionLink("Popular Wrapping Paper", "PopularWrapping", "Present")</li> 
                                <li>@Html.ActionLink("Popular Per Kid", "PresentsForKids", "Present")</li>    
                            </ul>
                        </li>
                    </ul>
                    <div class="pull-right">
                        <a> 
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div style ="padding-bottom:20%; padding-left:2%; padding-right:2%; padding-top:.3%;">
        
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryNew")

    <script src="~/Scripts/jquery.dataTables.js"> </script>
    @Scripts.Render("~/bundles/bootstrapjs")
    <script src="~/Scripts/myjQuery.js"> </script>
    @RenderSection("scripts", required: false)
</body>
</html>